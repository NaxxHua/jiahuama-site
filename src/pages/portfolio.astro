---
import NavBar from "../components/NavBar.jsx";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Portfolio of Jiahua Ma - Design Engineer at Visa. View my tech stack, professional work including Flutter design systems, and academic research."
    />
    <title>Portfolio & Projects - Jiahua Ma</title>
  </head>
  <body class="bg-gradient-to-br from-[#99AFD7] via-[#B8C5E0] to-[#D4DDEB]">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <NavBar />
    <main id="main-content" class="container mx-auto px-4 py-12">
      <h1 class="text-5xl font-bold text-center mb-4 text-gray-900">
        Portfolio & Projects
      </h1>
      <p class="text-center text-gray-700 mb-12 text-lg">
        A showcase of my technical work and professional contributions
      </p>

      <!-- Tech Stack Section -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-gray-800">Tech Stack</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-cyan-500"
          >
            <h3 class="font-bold text-lg mb-2">Flutter</h3>
            <p class="text-gray-600 text-sm">Mobile Development</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-orange-500"
          >
            <h3 class="font-bold text-lg mb-2">Swift</h3>
            <p class="text-gray-600 text-sm">iOS Development</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-blue-500"
          >
            <h3 class="font-bold text-lg mb-2">React</h3>
            <p class="text-gray-600 text-sm">Frontend Library</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-pink-500"
          >
            <h3 class="font-bold text-lg mb-2">Figma</h3>
            <p class="text-gray-600 text-sm">Design Tool</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-purple-500"
          >
            <h3 class="font-bold text-lg mb-2">UI/UX Design</h3>
            <p class="text-gray-600 text-sm">Human-Computer Interaction</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-blue-400"
          >
            <h3 class="font-bold text-lg mb-2">Python</h3>
            <p class="text-gray-600 text-sm">Data Science & ML</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-red-500"
          >
            <h3 class="font-bold text-lg mb-2">Databases</h3>
            <p class="text-gray-600 text-sm">SQL & NoSQL</p>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow border-t-4 border-indigo-500"
          >
            <h3 class="font-bold text-lg mb-2">R</h3>
            <p class="text-gray-600 text-sm">Statistical Computing</p>
          </div>
        </div>
      </section>

      <!-- Professional Work Section -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-gray-800">Professional Work</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Visa Inc -->
          <div
            class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow border-t-4"
            style="border-top-color: #1434CB;"
          >
            <div
              class="p-8"
              style="background: linear-gradient(135deg, #1434CB 0%, #0A1F6B 100%);"
            >
              <div class="flex items-center justify-between mb-4">
                <div>
                  <h3 class="text-2xl font-bold mb-2 text-white">Visa Inc.</h3>
                  <p class="text-blue-200">Software Engineer</p>
                </div>
                <img
                  src="/src/assets/Visa_Brandmark_Blue_RGB_2021.png"
                  alt="Visa"
                  class="h-12 brightness-0 invert"
                />
              </div>
            </div>
            <div class="p-6">
              <p class="text-gray-700 mb-4">
                Contributing to financial technology solutions since February
                2022 in Austin, Texas as a Design Engineer. Built and maintained
                the official Flutter design system library, enabling consistent
                UI/UX across mobile applications.
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <span class="text-green-500 mr-2" aria-hidden="true">✓</span>
                  <span class="text-gray-600"
                    >Flutter design system architecture</span
                  >
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2" aria-hidden="true">✓</span>
                  <span class="text-gray-600"
                    >VGAR-compliant component library</span
                  >
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2" aria-hidden="true">✓</span>
                  <span class="text-gray-600"
                    >Accessible design tokens and theming</span
                  >
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2" aria-hidden="true">✓</span>
                  <span class="text-gray-600"
                    >Cross-platform mobile development</span
                  >
                </li>
              </ul>
              <a
                href="https://design.visa.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block text-white px-6 py-3 rounded-lg font-semibold transition-all hover:opacity-90 focus:opacity-90 focus:ring-2 focus:ring-white focus:ring-offset-2"
                style="background-color: #1434CB;"
                aria-label="View Visa Design System (opens in new tab)"
              >
                View Design System →
              </a>
            </div>
          </div>

          <!-- PsySpace -->
          <div
            class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow border-t-4"
            style="border-top-color: #d3c8e7;"
          >
            <div
              class="p-8"
              style="background: linear-gradient(135deg, #d3c8e7 0%, #b8a8d1 100%);"
            >
              <div class="flex items-center justify-between mb-4">
                <div>
                  <h3 class="text-2xl font-bold mb-2 text-gray-800">
                    PsySpace
                  </h3>
                  <p class="text-gray-700">Design Engineer</p>
                </div>
                <img
                  src="/src/assets/Psy Space.png"
                  alt="PsySpace"
                  class="h-12"
                />
              </div>
            </div>
            <div class="p-6">
              <p class="text-gray-700 mb-4">
                <strong>Challenge:</strong> Mental health resource shortage at U.S.
                universities. 71% of Penn State students need accessible talk therapy,
                but face long wait times and impersonal service.
              </p>
              <p class="text-gray-700 mb-4">
                <strong>Solution:</strong> AI-powered online therapy platform that
                automates mental health screening, matches students with trained
                volunteers, and generates session reports—providing immediate support
                for short-term distress while identifying cases needing professional
                referral.
              </p>
              <p class="text-gray-700 mb-6">
                <strong>My Role:</strong> Led Flutter mobile app development, designing
                privacy-focused architecture with classification algorithms for issue
                identification, NLP-based sentiment analysis for automated reporting,
                and a recommendation system connecting users with appropriate volunteers.
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600"
                    >Flutter mobile app development</span
                  >
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600"
                    >AI-driven user matching system</span
                  >
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600"
                    >Privacy-first design & architecture</span
                  >
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600"
                    >Automated session report generation</span
                  >
                </li>
              </ul>
            </div>
          </div>

          <!-- Research -->
          <div
            class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow border-t-4"
            style="border-top-color: #bd0012;"
          >
            <div
              class="p-8"
              style="background: linear-gradient(135deg, #bd0012 0%, #8a000d 100%);"
            >
              <div class="flex items-center justify-between mb-4">
                <div>
                  <h3 class="text-2xl font-bold mb-2 text-white">
                    Academic Research
                  </h3>
                  <p class="text-red-100">Penn State University</p>
                </div>
                <img
                  src="/src/assets/cscw.png"
                  alt="CSCW"
                  class="h-12 brightness-0 invert"
                />
              </div>
            </div>
            <div class="p-6">
              <p class="text-gray-700 mb-4">
                Published research in Human-Computer Interaction and
                collaborated on projects exploring technology's impact on
                society.
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600">Co-authored CSCW 2020 paper</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600">HCI research focus</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600">Data science applications</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-2">✓</span>
                  <span class="text-gray-600">User experience studies</span>
                </li>
              </ul>
              <a
                href="https://dl.acm.org/doi/abs/10.1145/3449202"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block text-white px-6 py-3 rounded-lg font-semibold transition-colors"
                style="background-color: #bd0012;"
                onmouseover="this.style.opacity='0.9'"
                onmouseout="this.style.opacity='1'"
              >
                Read Paper →
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Education -->
      <section>
        <h2 class="text-3xl font-bold mb-8 text-gray-800">Education</h2>
        <div class="bg-white rounded-xl shadow-lg p-8">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">
                Master of Science in Informatics
              </h3>
              <p class="text-gray-600 mb-2">Penn State University</p>
              <p class="text-gray-500 text-sm mb-4">
                Focus: Human-Computer Interaction
              </p>
              <p class="text-gray-700">
                Specialized in designing and evaluating interactive systems,
                user experience research, and technology's social impact.
              </p>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">
                Bachelor of Science in Applied Data Sciences
              </h3>
              <p class="text-gray-600 mb-2">Penn State University</p>
              <p class="text-gray-500 text-sm mb-4">
                Data Analysis & Machine Learning
              </p>
              <p class="text-gray-700">
                Developed strong foundation in statistical analysis, data
                visualization, and machine learning applications.
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
