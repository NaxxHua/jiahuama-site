---
import NavBar from "../../components/NavBar.jsx";
import Guestbook from "../../components/Guestbook.astro";
import GoogleAnalytics from "../../components/GoogleAnalytics.astro";
import "../../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Piano Man - A cyberpunk cocktail inspired by VA-11 HALL-A. Sour and strong Blue Hawaii variation."
    />
    <title>Piano Man Recipe - Jiahua Ma</title>
    <GoogleAnalytics />
  </head>
  <body
    class="bg-gradient-to-br from-[#99AFD7] via-[#B8C5E0] to-[#D4DDEB] min-h-screen"
  >
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <NavBar client:load />

    <main id="main-content" class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <a
          href="/recipes"
          class="inline-flex items-center text-gray-700 hover:text-gray-900 mb-6 transition-colors"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          <span data-en="Back to Recipes" data-zh="返回食谱"
            >Back to Recipes</span
          >
        </a>

        <div class="bg-white rounded-xl shadow-xl overflow-hidden mb-8">
          <div
            class="p-8 text-white"
            style="background: linear-gradient(135deg, #2cb8b8 0%, #1f8e8e 100%);"
          >
            <h1
              class="text-4xl md:text-5xl font-bold mb-3"
              data-en="Piano Man"
              data-zh="男钢琴家"
            >
              Piano Man
            </h1>
            <p
              class="text-xl text-cyan-50 mb-2"
              data-en="Sour • Promo • Strong"
              data-zh="酸味 • 宣传 • 强烈"
            >
              Sour • Promo • Strong
            </p>
            <p
              class="text-cyan-50 italic"
              data-en="Inspired by VA-11 HALL-A"
              data-zh="灵感来自 VA-11 HALL-A"
            >
              Inspired by VA-11 HALL-A
            </p>
          </div>

          <div class="w-full h-64 md:h-96 bg-gray-200">
            <img
              src="/piano_man.jpg"
              alt="Piano Man"
              class="w-full h-full object-cover object-center"
              style="object-position: center 38%;"
            />
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="md:col-span-1">
            <div class="bg-white rounded-xl shadow-lg p-6 sticky top-6">
              <h2
                class="text-2xl font-bold text-gray-800 mb-4"
                data-en="Ingredients"
                data-zh="原料"
              >
                Ingredients
              </h2>
              <ul class="space-y-2 text-gray-700">
                <li data-en="• White Rum 30ml" data-zh="• 白朗姆 30ml">
                  • White Rum 30ml
                </li>
                <li
                  data-en="• Agwa (Coca Leaf Liqueur) 15ml"
                  data-zh="• 古柯叶利口酒 15ml"
                >
                  • Agwa (Coca Leaf Liqueur) 15ml
                </li>
                <li data-en="• Blue Curacao 15ml" data-zh="• 蓝橙酒 15ml">
                  • Blue Curacao 15ml
                </li>
                <li
                  data-en="• Fresh Lime Juice 15ml"
                  data-zh="• 新鲜青柠汁 15ml"
                >
                  • Fresh Lime Juice 15ml
                </li>
                <li data-en="• Simple Syrup 5ml" data-zh="• 糖浆 5ml">
                  • Simple Syrup 5ml
                </li>
                <li data-en="• Pineapple Juice 75ml" data-zh="• 菠萝汁 75ml">
                  • Pineapple Juice 75ml
                </li>
              </ul>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <p
                  class="text-sm text-gray-600"
                  data-en="≈ Blue Hawaii"
                  data-zh="≈ 蓝色夏威夷"
                >
                  ≈ Blue Hawaii
                </p>
                <p
                  class="text-sm text-gray-600 mt-2"
                  data-en="Glass: Hurricane Glass + Ice + Straw"
                  data-zh="杯具：飓风杯 + 冰块 + 吸管"
                >
                  Glass: Hurricane Glass + Ice + Straw
                </p>
              </div>
            </div>
          </div>

          <div class="md:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
              <h2
                class="text-2xl font-bold text-gray-800 mb-6"
                data-en="Instructions"
                data-zh="制作步骤"
              >
                Instructions
              </h2>

              <div class="space-y-6">
                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    1
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Add white rum, Agwa, Blue Curacao, fresh lime juice, simple syrup, and pineapple juice to a shaker with ice."
                      data-zh="在摇酒器中加入白朗姆酒、古柯叶利口酒、蓝柑橘酒、新鲜青柠汁、糖浆和菠萝汁，加冰块。"
                    >
                      Add white rum, Agwa, Blue Curacao, fresh lime juice,
                      simple syrup, and pineapple juice to a shaker with ice.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    2
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Shake vigorously until well chilled."
                      data-zh="用力摇匀至充分冰凉。"
                    >
                      Shake vigorously until well chilled.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    3
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Strain into a hurricane glass filled with ice."
                      data-zh="滤入装满冰块的飓风杯中。"
                    >
                      Strain into a hurricane glass filled with ice.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    4
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Serve with a straw."
                      data-zh="插入吸管即可享用。"
                    >
                      Serve with a straw.
                    </p>
                  </div>
                </div>
              </div>

              <div
                class="mt-8 p-6 bg-blue-50 rounded-lg border-l-4 border-blue-600"
              >
                <p
                  class="text-gray-700 italic"
                  data-en="This drink does not represent the opinions of the Bar Pianists Union or its associates."
                  data-zh="该饮品不代表酒吧钢琴师协会及其相关组织的意见。"
                >
                  "This drink does not represent the opinions of the Bar
                  Pianists Union or its associates."
                </p>
              </div>

              <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                <h3
                  class="font-bold text-gray-800 mb-2"
                  data-en="About Agwa"
                  data-zh="关于Agwa"
                >
                  About Agwa
                </h3>
                <p
                  class="text-sm text-gray-700"
                  data-en="Agwa is a coca leaf liqueur from Bolivia. It has a unique herbal flavor with hints of mint and citrus. If unavailable, you can substitute with another herbal liqueur."
                  data-zh="Agwa是来自玻利维亚的古柯叶利口酒。它有独特的草本风味，带有薄荷和柑橘的香气。如果买不到，可以用其他草本利口酒代替。"
                >
                  Agwa is a coca leaf liqueur from Bolivia. It has a unique
                  herbal flavor with hints of mint and citrus. If unavailable,
                  you can substitute with another herbal liqueur.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

        <!-- Guestbook Section -->
        <div class="mt-8">
          <Guestbook />
        </div>
    </main>

    <script>
      function updateLanguage(lang: string) {
        // Save language preference
        localStorage.setItem("language", lang);
        
        // Update all elements with data-lang attributes
        document.querySelectorAll("[data-en]").forEach((element) => {
          if (lang === "zh" && element.getAttribute("data-zh")) {
            element.textContent = element.getAttribute("data-zh");
          } else if (element.getAttribute("data-en")) {
            element.textContent = element.getAttribute("data-en");
          }
        });
      }

      const savedLang = localStorage.getItem("language") || "en";
      updateLanguage(savedLang);

      window.addEventListener("languageChange", (e: Event) => {
        updateLanguage((e as CustomEvent).detail);
      });
    </script>
  </body>
</html>
