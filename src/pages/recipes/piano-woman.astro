---
import NavBar from "../../components/NavBar.jsx";
import LanguageToggle from "../../components/LanguageToggle.jsx";
import GoogleAnalytics from "../../components/GoogleAnalytics.astro";
import "../../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Piano Woman - A cyberpunk cocktail inspired by VA-11 HALL-A. Sweet and happy."
    />
    <title>Piano Woman Recipe - Jiahua Ma</title>
    <GoogleAnalytics />
  </head>
  <body
    class="bg-gradient-to-br from-[#99AFD7] via-[#B8C5E0] to-[#D4DDEB] min-h-screen"
  >
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <NavBar />
    <LanguageToggle client:load />

    <main id="main-content" class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <a
          href="/recipes"
          class="inline-flex items-center text-gray-700 hover:text-gray-900 mb-6 transition-colors"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          <span data-en="Back to Recipes" data-zh="返回食谱"
            >Back to Recipes</span
          >
        </a>

        <div class="bg-white rounded-xl shadow-xl overflow-hidden mb-8">
          <div
            class="p-8 text-gray-900"
            style="background: linear-gradient(135deg, #ccf8f3 0%, #99e6dd 100%);"
          >
            <h1
              class="text-4xl md:text-5xl font-bold mb-3"
              data-en="Piano Woman"
              data-zh="女钢琴家"
            >
              Piano Woman
            </h1>
            <p
              class="text-xl text-gray-800 mb-2"
              data-en="Sweet • Happy • Promo"
              data-zh="甜味 • 惬意 • 宣传"
            >
              Sweet • Happy • Promo
            </p>
            <p
              class="text-gray-800 italic"
              data-en="Inspired by VA-11 HALL-A"
              data-zh="灵感来自 VA-11 HALL-A"
            >
              Inspired by VA-11 HALL-A
            </p>
          </div>

          <div class="w-full h-64 md:h-96 bg-gray-200">
            <img
              src="/piano_woman.jpg"
              alt="Piano Woman"
              class="w-full h-full object-cover object-center"
              style="object-position: center 50%;"
            />
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="md:col-span-1">
            <div class="bg-white rounded-xl shadow-lg p-6 sticky top-6">
              <h2
                class="text-2xl font-bold text-gray-800 mb-4"
                data-en="Ingredients"
                data-zh="原料"
              >
                Ingredients
              </h2>
              <ul class="space-y-2 text-gray-700">
                <li data-en="• Vodka 15ml" data-zh="• 伏特加 15ml">
                  • Vodka 15ml
                </li>
                <li data-en="• Peach Liqueur 30ml" data-zh="• 蜜桃利口酒 30ml">
                  • Peach Liqueur 30ml
                </li>
                <li data-en="• Blue Curacao 15ml" data-zh="• 蓝橙酒 15ml">
                  • Blue Curacao 15ml
                </li>
                <li
                  data-en="• Sweet & Sour Mix 30ml"
                  data-zh="• 酸甜混合液 30ml"
                >
                  • Sweet & Sour Mix 30ml
                </li>
                <li data-en="• Apple Juice 30ml" data-zh="• 苹果汁 30ml">
                  • Apple Juice 30ml
                </li>
                <li
                  data-en="• Pink Cranberry 45ml"
                  data-zh="• 粉红蔓越莓汁 45ml"
                >
                  • Pink Cranberry 45ml
                </li>
              </ul>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <p
                  class="text-sm text-gray-600"
                  data-en="≈ Dong Hae (东海)"
                  data-zh="≈ 东海"
                >
                  ≈ Dong Hae (东海)
                </p>
                <p
                  class="text-sm text-gray-600 mt-2"
                  data-en="Glass: Wine Glass + Ice"
                  data-zh="杯具：葡萄酒杯 + 冰块"
                >
                  Glass: Wine Glass + Ice
                </p>
              </div>
            </div>
          </div>

          <div class="md:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
              <h2
                class="text-2xl font-bold text-gray-800 mb-6"
                data-en="Instructions"
                data-zh="制作步骤"
              >
                Instructions
              </h2>

              <div class="space-y-6">
                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-pink-500 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    1
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Add vodka, peach liqueur, Blue Curacao, sweet & sour mix, apple juice, and pink cranberry to a shaker with ice."
                      data-zh="在摇酒器中加入伏特加、桃子利口酒、蓝柑橘酒、酸甜混合液、苹果汁和粉红蔓越莓，加冰块。"
                    >
                      Add vodka, peach liqueur, Blue Curacao, sweet & sour mix,
                      apple juice, and pink cranberry to a shaker with ice.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-pink-500 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    2
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Shake well until chilled."
                      data-zh="充分摇匀至冰凉。"
                    >
                      Shake well until chilled.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-pink-500 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    3
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Strain into a wine glass filled with ice."
                      data-zh="滤入装满冰块的葡萄酒杯中。"
                    >
                      Strain into a wine glass filled with ice.
                    </p>
                  </div>
                </div>
              </div>

              <div
                class="mt-8 p-6 bg-pink-50 rounded-lg border-l-4 border-pink-500"
              >
                <p
                  class="text-gray-700 italic"
                  data-en="It was originally called Pretty Woman, but too many people complained there should be a Piano Woman if there was a Piano Man."
                  data-zh="它的本名是Pretty Woman，但有很多人投诉如果有种酒叫Piano Man（男钢琴师），就该有另一种被命名为Piano Woman（女钢琴师）。"
                >
                  "It was originally called Pretty Woman, but too many people
                  complained there should be a Piano Woman if there was a Piano
                  Man."
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      function updateLanguage(lang: string) {
        document.querySelectorAll("[data-en]").forEach((element) => {
          if (lang === "zh" && element.getAttribute("data-zh")) {
            element.textContent = element.getAttribute("data-zh");
          } else if (element.getAttribute("data-en")) {
            element.textContent = element.getAttribute("data-en");
          }
        });
      }

      const savedLang = localStorage.getItem("language") || "en";
      updateLanguage(savedLang);

      window.addEventListener("languageChange", (e: Event) => {
        updateLanguage((e as CustomEvent).detail);
      });
    </script>
  </body>
</html>
