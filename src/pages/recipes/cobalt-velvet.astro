---
import NavBar from "../../components/NavBar.jsx";
import GoogleAnalytics from "../../components/GoogleAnalytics.astro";
import "../../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Cobalt Velvet - A cyberpunk cocktail inspired by VA-11 HALL-A. Blue Long Island Iced Tea variation."
    />
    <title>Cobalt Velvet Recipe - Jiahua Ma</title>
    <GoogleAnalytics />
  </head>
  <body
    class="bg-gradient-to-br from-[#99AFD7] via-[#B8C5E0] to-[#D4DDEB] min-h-screen"
  >
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <NavBar client:load />

    <main id="main-content" class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <!-- Back Button -->
        <a
          href="/recipes"
          class="inline-flex items-center text-gray-700 hover:text-gray-900 mb-6 transition-colors"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          <span data-en="Back to Recipes" data-zh="返回食谱"
            >Back to Recipes</span
          >
        </a>

        <!-- Recipe Header -->
        <div class="bg-white rounded-xl shadow-xl overflow-hidden mb-8">
          <div
            class="p-8 text-gray-900"
            style="background: linear-gradient(135deg, #84efe3 0%, #5dd9ce 100%);"
          >
            <h1
              class="text-4xl md:text-5xl font-bold mb-3"
              data-en="Cobalt Velvet"
              data-zh="钴蓝天鹅绒"
            >
              Cobalt Velvet
            </h1>
            <p
              class="text-xl text-gray-800 mb-2"
              data-en="Bubbly • Classy • Burning"
              data-zh="发泡 • 时尚 • 火辣"
            >
              Bubbly • Classy • Burning
            </p>
            <p
              class="text-gray-800 italic"
              data-en="Inspired by VA-11 HALL-A"
              data-zh="灵感来自 VA-11 HALL-A"
            >
              Inspired by VA-11 HALL-A
            </p>
          </div>

          <!-- Recipe Image -->
          <div class="w-full h-64 md:h-96 bg-gray-200">
            <img
              src="/cobalt_velvet.jpg"
              alt="Cobalt Velvet"
              class="w-full h-full object-cover object-center"
              style="object-position: center 60%;"
            />
          </div>
        </div>

        <!-- Recipe Content -->
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Ingredients -->
          <div class="md:col-span-1">
            <div class="bg-white rounded-xl shadow-lg p-6 sticky top-6">
              <h2
                class="text-2xl font-bold text-gray-800 mb-4"
                data-en="Ingredients"
                data-zh="原料"
              >
                Ingredients
              </h2>
              <ul class="space-y-2 text-gray-700">
                <li
                  data-en="• Spirytus Rektyfikowany (Vodka) 10ml"
                  data-zh="• 生命之水伏特加 10ml"
                >
                  • Spirytus Rektyfikowany (Vodka) 10ml
                </li>
                <li
                  data-en="• Brugal Blanco (White Rum) 15ml"
                  data-zh="• 布鲁格白朗姆 15ml"
                >
                  • Brugal Blanco (White Rum) 15ml
                </li>
                <li
                  data-en="• Beefeater London (Gin) 20ml"
                  data-zh="• 必富达伦敦金酒 20ml"
                >
                  • Beefeater London (Gin) 20ml
                </li>
                <li data-en="• Blue Curacao 10ml" data-zh="• 蓝橙酒 10ml">
                  • Blue Curacao 10ml
                </li>
                <li
                  data-en="• Sweet & Sour Mix 30ml"
                  data-zh="• 酸甜混合液 30ml"
                >
                  • Sweet & Sour Mix 30ml
                </li>
                <li data-en="• Sprite (to top)" data-zh="• 雪碧（注满）">
                  • Sprite (to top)
                </li>
              </ul>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <p
                  class="text-sm text-gray-600"
                  data-en="≈ Blue Long Island Iced Tea"
                  data-zh="≈ 蓝色长岛冰茶"
                >
                  ≈ Blue Long Island Iced Tea
                </p>
              </div>
            </div>
          </div>

          <!-- Instructions -->
          <div class="md:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
              <h2
                class="text-2xl font-bold text-gray-800 mb-6"
                data-en="Instructions"
                data-zh="制作步骤"
              >
                Instructions
              </h2>

              <div class="space-y-6">
                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    1
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Add Spirytus Rektyfikowany (vodka), white rum, gin, Blue Curacao, and sweet & sour mix to a shaker with ice."
                      data-zh="在摇酒器中加入伏特加、白朗姆酒、金酒、蓝柑橘酒和酸甜混合液，加冰块。"
                    >
                      Add Spirytus Rektyfikowany (vodka), white rum, gin, Blue
                      Curacao, and sweet & sour mix to a shaker with ice.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    2
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Shake well until chilled."
                      data-zh="充分摇匀至冰凉。"
                    >
                      Shake well until chilled.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    3
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Strain into a highball glass filled with ice."
                      data-zh="滤入装满冰块的高球杯中。"
                    >
                      Strain into a highball glass filled with ice.
                    </p>
                  </div>
                </div>

                <div class="flex gap-4">
                  <div
                    class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold"
                  >
                    4
                  </div>
                  <div>
                    <p
                      class="text-gray-700"
                      data-en="Top with Sprite for a bubbly finish."
                      data-zh="加入雪碧，增添气泡口感。"
                    >
                      Top with Sprite for a bubbly finish.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Quote -->
              <div
                class="mt-8 p-6 bg-blue-50 rounded-lg border-l-4 border-blue-600"
              >
                <p
                  class="text-gray-700 italic"
                  data-en="It's like champagne served in a cup that had a bit of cola left"
                  data-zh="就如同把香槟倒在还剩一点可乐的杯子里。"
                >
                  "It's like champagne served in a cup that had a bit of cola
                  left"
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      function updateLanguage(lang: string) {
        // Save language preference
        localStorage.setItem("language", lang);

        // Update all elements with data-lang attributes
        document.querySelectorAll("[data-en]").forEach((element) => {
          if (lang === "zh" && element.getAttribute("data-zh")) {
            element.textContent = element.getAttribute("data-zh");
          } else if (element.getAttribute("data-en")) {
            element.textContent = element.getAttribute("data-en");
          }
        });
      }

      const savedLang = localStorage.getItem("language") || "en";
      updateLanguage(savedLang);

      window.addEventListener("languageChange", (e: Event) => {
        updateLanguage((e as CustomEvent).detail);
      });
    </script>
  </body>
</html>
