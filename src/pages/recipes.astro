---
import NavBar from "../components/NavBar.jsx";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import { recipes } from "../data/recipes";
import "../styles/global.css";

const dishes = recipes.filter((recipe) => recipe.category === "dish");
const cocktails = recipes.filter((recipe) => recipe.category === "cocktail");
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Jiahua Ma's recipes collection - Sharing my favorite cocktails and dishes from around the world."
    />
    <title>Recipes Collection - Jiahua Ma</title>
    <GoogleAnalytics />
  </head>
  <body
    class="bg-gradient-to-br from-[#99AFD7] via-[#B8C5E0] to-[#D4DDEB] min-h-screen"
  >
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <NavBar client:load />

    <main id="main-content" class="container mx-auto px-4 py-12">
      <h1
        class="text-5xl font-bold text-center mb-4 text-gray-800"
        data-en="My Recipes Collection"
        data-zh="我的食谱集"
      >
        My Recipes Collection
      </h1>
      <p
        class="text-center text-gray-700 mb-12 text-lg"
        data-en="Sharing my favorite cocktails and dishes"
        data-zh="分享我最喜欢的鸡尾酒和菜肴"
      >
        Sharing my favorite cocktails and dishes
      </p>

      <!-- Cocktails Section -->
      <section class="mb-16">
        <h2
          class="text-3xl font-bold text-gray-800 mb-4"
          data-en="Cocktails"
          data-zh="鸡尾酒"
        >
          Cocktails
        </h2>

        <!-- VA-11 HALL-A Tribute -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
          <div class="flex flex-col md:flex-row">
            <div class="w-full md:w-auto flex-shrink-0">
              <img
                src="https://static.wikia.nocookie.net/va11halla/images/6/61/Steam_Cover.jpg"
                alt="VA-11 HALL-A"
                class="w-full md:w-auto md:h-full object-contain"
              />
            </div>
            <div class="flex-1 min-w-0 p-6 flex flex-col justify-center">
              <h3
                class="text-2xl font-bold text-gray-800 mb-3"
                data-en="Inspired by VA-11 HALL-A"
                data-zh="灵感来自 VA-11 HALL-A"
              >
                Inspired by VA-11 HALL-A
              </h3>
              <p
                class="text-lg font-semibold mb-2"
                style="color: #000079;"
                data-en="Time to mix drinks and change lives"
                data-zh="调制饮料，改变人生"
              >
                Time to mix drinks and change lives
              </p>
              <p
                class="text-gray-600 italic"
                data-en="A cyberpunk bartending game where every drink tells a story"
                data-zh="一款赛博朋克调酒游戏，每一杯饮料都诉说着一个故事"
              >
                A cyberpunk bartending game where every drink tells a story
              </p>
            </div>
          </div>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {
            cocktails.length === 0 ? (
              <div class="bg-white/80 backdrop-blur rounded-xl shadow-lg p-8 text-center border-2 border-dashed border-gray-300">
                <p
                  class="text-gray-500 text-lg"
                  data-en="Under Construction..."
                  data-zh="正在施工……"
                >
                  Under Construction...
                </p>
              </div>
            ) : (
              cocktails.map((recipe) => (
                <a
                  href={`/recipes/${recipe.id}`}
                  class="group bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all transform hover:-translate-y-2"
                >
                  <div class="h-48 overflow-hidden bg-gray-200">
                    <img
                      src={recipe.image}
                      alt={recipe.title.en}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  </div>
                  <div class="p-6">
                    <div class="flex items-center justify-between mb-2">
                      <h3
                        class="text-2xl font-bold text-gray-800 group-hover:text-blue-600 transition-colors"
                        data-en={recipe.title.en}
                        data-zh={recipe.title.zh}
                      >
                        {recipe.title.en}
                      </h3>
                    </div>
                    <p
                      class="text-gray-600 text-sm mb-3"
                      data-en={recipe.subtitle.en}
                      data-zh={recipe.subtitle.zh}
                    >
                      {recipe.subtitle.en}
                    </p>
                    <p
                      class="text-gray-500 text-sm"
                      data-en={recipe.description.en}
                      data-zh={recipe.description.zh}
                    >
                      {recipe.description.en}
                    </p>
                  </div>
                </a>
              ))
            )
          }
        </div>
      </section>

      <!-- Dishes Section -->
      <section class="mb-16">
        <h2
          class="text-3xl font-bold text-gray-800 mb-8"
          data-en="Dishes"
          data-zh="菜肴"
        >
          Dishes
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {
            dishes.map((recipe) => (
              <a
                href={`/recipes/${recipe.id}`}
                class="group bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all transform hover:-translate-y-2"
              >
                <div class="h-48 overflow-hidden bg-gray-200">
                  <img
                    src={recipe.image}
                    alt={recipe.title.en}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                  />
                </div>
                <div class="p-6">
                  <div class="flex items-center justify-between mb-2">
                    <h3
                      class="text-2xl font-bold text-gray-800 group-hover:text-orange-600 transition-colors"
                      data-en={recipe.title.en}
                      data-zh={recipe.title.zh}
                    >
                      {recipe.title.en}
                    </h3>
                  </div>
                  <p
                    class="text-gray-600 text-sm mb-3"
                    data-en={recipe.subtitle.en}
                    data-zh={recipe.subtitle.zh}
                  >
                    {recipe.subtitle.en}
                  </p>
                  <p
                    class="text-gray-500 text-sm"
                    data-en={recipe.description.en}
                    data-zh={recipe.description.zh}
                  >
                    {recipe.description.en}
                  </p>
                </div>
              </a>
            ))
          }
        </div>
      </section>
    </main>

    <script>
      function updateLanguage(lang: string) {
        // Save language preference
        localStorage.setItem("language", lang);

        // Update all elements with data-lang attributes
        document.querySelectorAll("[data-en]").forEach((element) => {
          if (lang === "zh" && element.getAttribute("data-zh")) {
            element.textContent = element.getAttribute("data-zh");
          } else if (element.getAttribute("data-en")) {
            element.textContent = element.getAttribute("data-en");
          }
        });
      }

      // Initialize language on page load
      const savedLang = localStorage.getItem("language") || "en";
      updateLanguage(savedLang);

      // Listen for language changes
      window.addEventListener("languageChange", (e: Event) => {
        updateLanguage((e as CustomEvent).detail);
      });
    </script>
  </body>
</html>
