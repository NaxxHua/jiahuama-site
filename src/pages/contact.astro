---
import NavBar from "../components/NavBar.jsx";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Contact Jiahua Ma - Design Engineer. Reach out via email, LinkedIn, GitHub, or view my table tennis profile."
    />
    <title>Contact - Jiahua Ma</title>
    <GoogleAnalytics />
  </head>
  <body
    class="bg-gradient-to-br from-[#99AFD7] via-[#B8C5E0] to-[#D4DDEB] min-h-screen"
  >
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <NavBar client:load />

    <main id="main-content" class="container mx-auto px-4 py-16">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-12">
          <h1 class="text-3xl md:text-4xl font-semibold mb-4 text-gray-900">
            <span data-en="Get In Touch" data-zh="联系我">Get In Touch</span>
          </h1>
          <p
            class="text-base text-gray-600"
            data-en="Feel free to reach out for collaborations, opportunities, or just a friendly chat!"
            data-zh="欢迎联系我讨论合作、机会或者只是聊聊天！"
          >
            Feel free to reach out for collaborations, opportunities, or just a
            friendly chat!
          </p>
        </div>

        <!-- Contact Cards -->
        <div class="grid md:grid-cols-2 gap-4 md:gap-6 mb-12">
          <!-- Email Card -->
          <button
            id="emailCard"
            class="group bg-white rounded-xl shadow-md p-4 md:p-6 hover:shadow-lg transition-all border-l-4 border-blue-500 text-left w-full cursor-pointer"
          >
            <div class="flex items-start justify-between">
              <div class="flex items-start flex-1">
                <div
                  class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center mr-4 flex-shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3
                    class="text-lg font-semibold text-gray-800"
                    data-en="Email"
                    data-zh="邮箱"
                  >
                    Email
                  </h3>
                  <p class="text-gray-600 text-sm mb-1">naxxhua@gmail.com</p>
                  <p
                    class="text-blue-500 text-xs font-medium"
                    data-en="Click to copy"
                    data-zh="点击复制"
                  >
                    Click to copy
                  </p>
                </div>
              </div>
              <div
                id="copyIcon"
                class="text-gray-400 group-hover:text-blue-500 transition-colors ml-2"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
            </div>
          </button>

          <!-- LinkedIn Card -->
          <a
            href="https://www.linkedin.com/in/jiahua-ma/"
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-white rounded-xl shadow-md p-4 md:p-6 hover:shadow-lg transition-all border-l-4 border-blue-700"
          >
            <div class="flex items-start">
              <div
                class="w-12 h-12 bg-blue-700 rounded-lg flex items-center justify-center mr-4 flex-shrink-0"
              >
                <svg
                  class="w-6 h-6 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">LinkedIn</h3>
                <p
                  class="text-gray-600 text-sm"
                  data-en="Connect with me"
                  data-zh="与我联系"
                >
                  Connect with me
                </p>
              </div>
            </div>
          </a>

          <!-- GitHub Card -->
          <a
            href="https://github.com/NaxxHua"
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-white rounded-xl shadow-md p-4 md:p-6 hover:shadow-lg transition-all border-l-4 border-gray-800"
          >
            <div class="flex items-start">
              <div
                class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center mr-4 flex-shrink-0"
              >
                <svg
                  class="w-6 h-6 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">GitHub</h3>
                <p
                  class="text-gray-600 text-sm"
                  data-en="Check out my code"
                  data-zh="查看我的代码"
                >
                  Check out my code
                </p>
              </div>
            </div>
          </a>

          <!-- ATTC Card -->
          <a
            href="https://usatt.simplycompete.com/userAccount/up/177118"
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-white rounded-xl shadow-md p-4 md:p-6 hover:shadow-lg transition-all border-l-4"
            style="border-left-color: #00609f;"
          >
            <div class="flex items-start">
              <div
                class="w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0 overflow-hidden"
                style="background-color: #00609f;"
              >
                <img
                  src="/attc.png"
                  alt="ATTC logo"
                  class="w-full h-full object-cover"
                />
              </div>
              <div>
                <h3
                  class="text-lg font-semibold text-gray-800"
                  data-en="Table Tennis"
                  data-zh="乒乓球"
                >
                  Table Tennis
                </h3>
                <p
                  class="text-gray-600 text-sm"
                  data-en="View my player stats"
                  data-zh="查看选手数据"
                >
                  View my player stats
                </p>
              </div>
            </div>
          </a>
        </div>

        <!-- Call to Action -->
        <div class="bg-white rounded-xl shadow-xl p-8 md:p-12 text-center">
          <h2
            class="text-3xl font-bold mb-4 text-gray-800"
            data-en="Ready to Collaborate?"
            data-zh="准备好合作了吗？"
          >
            Ready to Collaborate?
          </h2>
          <p
            class="text-gray-600"
            data-en="Whether it's a design project, development opportunity, or just a chat about tech and table tennis, I'd love to hear from you!"
            data-zh="无论是设计项目、开发机会，还是只是聊聊技术和乒乓球，我都很乐意听到你的声音！"
          >
            Whether it's a design project, development opportunity, or just a
            chat about tech and table tennis, I'd love to hear from you!
          </p>
        </div>
      </div>
    </main>

    <script>
      function updateLanguage(lang: string) {
        // Save language preference
        localStorage.setItem("language", lang);

        // Update all elements with data-lang attributes
        document.querySelectorAll("[data-en]").forEach((element) => {
          if (lang === "zh" && element.getAttribute("data-zh")) {
            element.textContent = element.getAttribute("data-zh");
          } else if (element.getAttribute("data-en")) {
            element.textContent = element.getAttribute("data-en");
          }
        });
      }

      // Initialize language on page load
      const savedLang = localStorage.getItem("language") || "en";
      updateLanguage(savedLang);

      // Listen for language changes
      window.addEventListener("languageChange", (e: Event) => {
        updateLanguage((e as CustomEvent).detail);
      });

      // Email copy functionality
      const emailCard = document.getElementById("emailCard");
      const copyIcon = document.getElementById("copyIcon");
      const email = "naxxhua@gmail.com";

      if (emailCard && copyIcon) {
        emailCard.addEventListener("click", async () => {
          try {
            await navigator.clipboard.writeText(email);

            // Show success feedback
            const currentLang = localStorage.getItem("language") || "en";
            const successMessage = currentLang === "zh" ? "已复制!" : "Copied!";

            // Change icon to checkmark
            copyIcon.innerHTML = `
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            `;

            // Show toast notification
            const toast = document.createElement("div");
            toast.className =
              "fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in";
            toast.textContent = successMessage;
            document.body.appendChild(toast);

            // Reset after 2 seconds
            setTimeout(() => {
              copyIcon.innerHTML = `
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              `;
              toast.remove();
            }, 2000);
          } catch (err) {
            console.error("Failed to copy email:", err);
            // Fallback: try to select the text
            alert(email);
          }
        });
      }
    </script>

    <style>
      @keyframes fade-in {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .animate-fade-in {
        animation: fade-in 0.3s ease-out;
      }
    </style>
  </body>
</html>
